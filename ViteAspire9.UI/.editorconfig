# top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# React/TypeScript files
[*.{ts,tsx,js,jsx}]
indent_style = space
indent_size = 2

# JSON and Markdown files
[*.{json,md}]
indent_style = space
indent_size = 2
